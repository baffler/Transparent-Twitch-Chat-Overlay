<Window x:Class="TransparentTwitchChatWPF.Input_Custom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:TransparentTwitchChatWPF"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:ThemeManager.RequestedTheme="Dark"
        WindowStyle="ToolWindow"
        Topmost="True"
        Width="420"
        Height="485"
        Background="#1A1A1A"
        Title="Enter Custom URL" SizeToContent="Manual" WindowStartupLocation="CenterScreen" ContentRendered="Window_ContentRendered">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- <Image Source="/WpfTutorialSamples;component/Images/question32.png" Width="32" Height="32" Grid.RowSpan="2" Margin="20,0" /> -->

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
            <Label Name="lblName">Display Name:</Label>
            <TextBox Name="txtName" MinWidth="250"></TextBox>
            <Label Name="lblQuestion">Custom URL:</Label>
            <TextBox Name="txtUrl" MinWidth="250"></TextBox>
            <TextBlock 
                    Margin="0,10,0,0" 
                    FontStyle="Italic" 
                    TextWrapping="Wrap"
                    Text="Allows you to click on website content, like login buttons or cookie pop-ups when borders are visible. You can change this setting later." 
                    />
            <CheckBox Content="Allow Interaction" Name="cbAllowInteraction" />

            <Label Margin="0,10,0,0">Custom CSS:</Label>
        </StackPanel>
        <avalonedit:TextEditor Name="tbCustomCSS"
                Grid.Row="1" Grid.ColumnSpan="2"
                Background="#AAA"
                BorderBrush="LightSlateGray"
                BorderThickness="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                MinHeight="150"
                HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                Margin="0" WordWrap="False"
                Text="body { background-color: rgba(0, 0, 0, 0); }" />

            <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
