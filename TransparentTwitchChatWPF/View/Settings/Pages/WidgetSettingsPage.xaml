<UserControl x:Class="TransparentTwitchChatWPF.View.Settings.WidgetSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TransparentTwitchChatWPF.View.Settings"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             ui:ThemeManager.RequestedTheme="Dark"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="widgetGrid" Visibility="Visible" Margin="5,5,0,0" Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button
                Name="NewWidgetButton"
                Content="Create Widget"
                Height="32"
                FontWeight="Bold"
                HorizontalAlignment="Left" 
                Margin="20,10,0,0"
                VerticalAlignment="Top" 
                Width="135" 
                Click="NewWidgetButton_Click" />
            <TextBlock 
                Margin="5,10,5,0"
                TextWrapping="Wrap"
                Text="To see follows/subs/viewers/etc then you create a widget" />
            <TextBlock 
                Margin="5,5,5,0"
                TextWrapping="Wrap"
                Text="For information on how to do that please check the wiki at:" />
            
            <Label Margin="0,0,0,0">
                <Hyperlink NavigateUri = "https://github.com/baffler/Transparent-Twitch-Chat-Overlay/wiki"
                       Hyperlink.RequestNavigate = "Hyperlink_RequestNavigate" >
                    <TextBlock Text="https://github.com/baffler/Transparent-Twitch-Chat-Overlay/wiki" />
                </Hyperlink>
            </Label>
        </StackPanel>
    </Grid>
</UserControl>
